{
    "name": "marcojanssen/silex-rest",
    "description": "Package containing several services for silex/rest skeleton",
    "keywords": ["silex", "rest", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Janssen",
            "email": "dev@marcojanssen.net"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "filp/whoops": "1.*",
        "igorw/config-service-provider": "1.2.*",
        "marcojanssen/silex-rest-service-providers": "0.*",
        "marcojanssen/silex-routing-service-provider": "1.2.*",
        "marcojanssen/silex-service-register-provider": "1.1.*",
        "silex/silex": "1.1.*",
        "symfony/monolog-bridge": "~2.3"
    },
    "repositories": [
        {
            "name": "marcojanssen/silex-rest-service-providers",
            "type": "vcs",
            "url": "https://github.com/marcojanssen/silex-rest-service-providers.git"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "chmod 777 app/cache",
            "chmod 777 app/logs"
        ],
        "post-update-cmd": [
            "chmod 777 app/cache",
            "chmod 777 app/logs"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "Example\\": "src/"
        }
    }
}
